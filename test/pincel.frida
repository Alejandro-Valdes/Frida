programa turtle

	/*Drawing with turtle and frida */
	
	lienzo{
		variable pincel frida =  nuevo pincel("#ff0000");
		variable entero lim = 0;
		variable entero gir = 30;
		variable entero col_lim = 5;
		variable decimal arreglo[2] = {1/1.0, 43.2 - 2 * 3};

		imprimir(arreglo[0] + arreglo[1]);
		imprimir(arreglo[1] * 20 / 10);
		
		imprimir('test' == 'test');
		mientras(lim < 180){
			frida.pinta(100);
			frida.gira(gir);
			frida.pinta(20);
			frida.gira(-60);
			frida.pinta(50);
			frida.gira(gir);
			frida.desplazar(0, 0);
			frida.gira(2);

			si(col_lim <= 5){
				frida.color("#ff0000");
			}
			sino_pero(col_lim  <= 10){
				frida.color("#00ff00");
			}
			sino{
				frida.color("#0000ff");
			}

			si(col_lim == 15){
				col_lim = 0;
			}

			col_lim = col_lim + 1;
			lim = lim + 1;
		}

		/*frida.elimina();*/
		frida.color("#000000");
	}
