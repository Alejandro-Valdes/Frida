programa turtle

	/*Drawing with turtle and frida */
	
	lienzo{
		variable pincel frida =  nuevo pincel("#ff0000");
		variable entero lim = 0;
		variable entero gir = 30;
		variable entero col_lim = 5;
		variable cadena colores[3] = {'#ff0000', '#00ff00', '#0000ff'};

		imprimir(colores[0] + colores[1]);
		imprimir(colores[1]);
		
		imprimir('test' == 'test');
		
		mientras(lim < 180){
			frida.pinta(100);
			frida.gira(gir);
			frida.pinta(20);
			frida.gira(-60);
			frida.pinta(50);
			frida.gira(gir);
			frida.desplazar(0, 0);
			frida.gira(2);

			si(col_lim <= 5){
				frida.color(colores[0]);
			}
			sino_pero(col_lim  <= 10){
				frida.color(colores[1]);
			}
			sino{
				frida.color(colores[2]);
			}

			si(col_lim == 15){
				col_lim = 0;
			}

			col_lim = col_lim + 1;
			lim = lim + 1;
		}
		

		frida.desplazar(-100, -100);

		frida.gira(90);
		frida.arco(100, 180);
		frida.gira(90);
		frida.arco(100, 180);
		frida.gira(90);
		frida.arco(100, 180);
		frida.gira(90);
		frida.arco(100, 180);

		frida.desplazar(-120, -120);

		frida.gira(90);
		frida.arco(120, 180);
		frida.gira(90);
		frida.arco(120, 180);
		frida.gira(90);
		frida.arco(120, 180);
		frida.gira(90);
		frida.arco(120, 180);
		
	}
