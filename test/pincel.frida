programa turtle

	/*Drawing with turtle and frida */
	
	lienzo{
		variable pincel frida =  nuevo pincel("#FF0000");
		variable entero lim = 0;
		variable entero gir = 30;
		variable entero col_lim = 5;
		variable decimal arreglo[2] = {1/1.0, 43.2 - 2 * 3};

		imprimir(arreglo[0]);
		imprimir(arreglo[1]);
		
		mientras(lim < 180){
			frida.pinta(100);
			frida.gira(gir);
			frida.pinta(20);
			frida.gira(-60);
			frida.pinta(50);
			frida.gira(gir);
			frida.desplazar(0, 0);
			frida.gira(2);

			si(col_lim <= 5){
				frida.color("#FF0000");
			}
			sino_pero(col_lim  <= 10){
				frida.color("#00FF00");
			}
			sino{
				frida.color("#0000FF");
			}

			si(col_lim == 15){
				col_lim = 0;
			}

			col_lim = col_lim + 1;
			lim = lim + 1;
		}
	}
