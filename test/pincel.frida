programa turtle

	/*Drawing with turtle and frida */
	
	lienzo{
		variable pincel frida =  nuevo pincel("#FF0000");
		variable entero lim = 0;
		
		mientras(lim < 180){
			frida.pinta(100);
			frida.gira(30);
			frida.pinta(20);
			frida.gira(-60);
			frida.pinta(50);
			frida.gira(30);
			frida.desplazar(0, 0);
			frida.gira(2);
			lim = lim + 1;

			si(lim <= 60){
				frida.color("#FF0000");
			}
			sino_pero(lim <= 120){
				frida.color("#00FF00");
			}
			sino{
				frida.color("#0000FF");
			}

		}
	}
