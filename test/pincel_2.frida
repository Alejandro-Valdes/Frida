programa turtle

	/*Drawing with turtle and frida */
	
	lienzo{
		variable pincel frida =  nuevo pincel("rosa");
		variable pincel diego =  nuevo pincel('azul');

		variable entero x = 1;

		diego.color('morado');
		frida.color("morado");

		mientras(x < 400){
			diego.pinta(x);
			frida.pinta(x);
			frida.gira(91);
			diego.gira(-91);
			x = x + 1;
		}

	}
